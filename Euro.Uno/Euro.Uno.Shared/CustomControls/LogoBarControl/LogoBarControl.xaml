<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:customControls="using:Euro.Uno.Shared.CustomControls.LogoBarControl">
    <Style TargetType="customControls:LogoBarControl">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="customControls:LogoBarControl">
                    <Grid Grid.Row="0">
                        <Image Source="/Assets/bg_header.jpg" Stretch="Fill" />
                        <Image
                            Margin="0,16,16,16"
                            HorizontalAlignment="Right"
                            Source="/Assets/logo.png"
                            Stretch="Uniform" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>